{
  "project_identity": {
    "manifest_version": "1.2.0",
    "required_venv": "./.venv",
    "config_file": "pyproject.toml"
  },
  "tdd_workflow": {
    "stages": [
      {
        "id": "stage-0-env",
        "name": "Environmental Sovereignty",
        "action": "Verify Venv and Root",
        "skip_if_exists": ["./.venv/bin/python", "pyproject.toml"]
      },
      {
        "id": "stage-1-doc",
        "name": "Doc-Architect",
        "action": "Create Blueprint",
        "skip_if_exists": ["docs/modules/{module}/README.md"]
      },
      {
        "id": "stage-2-test",
        "name": "Test-Scaffolder",
        "action": "Create Failing Tests",
        "skip_if_exists": ["tests/{module}/test_unit.py"]
      },
      {
        "id": "stage-3-impl",
        "name": "Clean-Implementation",
        "action": "Build Logic & Logging",
        "skip_if_exists": ["src/{root}/{module}/core.py"],
        "quality_gates": ["absolute_imports", "frozen_pydantic", "blueprint_ids"]
      }
    ]
  }
}